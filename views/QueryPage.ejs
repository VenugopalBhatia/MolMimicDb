
    
        <link rel="stylesheet" href="/css/QueryPage.css">
    
        <div class = "container">
            <%- include('_queryForm') %>
            <button class="openbtn"  onclick="openNav()">&#9776; </button>
            
            <div id = "MainRes" >
            
                <!-- Add condition to keep table hidden if empty set -->
            
            <% if(rows.length!=0){ %>
                <div>
                    <span>
                        <h5>Showing <%= rows.length %> of <%= TableLength %> records</h5>
                    </span>
                    <span>
                        <% if( ColumnName  == null || ColumnValues == null ){ %>
                            <h5>Showing all values</h5>
                        <% } else {%>
                        <h5>Values for Column = <%=ColumnName%>, Values = <%=ColumnValues%> </h5>
                        <% } %>
                    </span>

                </div>
                <div>

                    <table id = "ResultTable">
                        <tr>
                            <% for(column of columns){ %>
                                <th>
                                    <%= column %>
                                </th>
            
                           <% } %>
                        </tr>
            
                        <% for(let i = 0; i<rows.length ; i++){ %>
                            <tr>
                                <% for(column of columns){ %>
                                    <td>
                                        <%= rows[i][column]%>
                                    </td>
            
                                <% } %>
                            </tr>
                        <% } %>
                    </table>
            

                </div>
            <% }else{ %>
                <h4><%= message %></h4>
            <% } %>
        
            </div>

           
            
    
            

        </div>

        <script type = "text/javascript" src = "/js/sidePanel.js"></script>

        
        
        